{% extends "layout_default.html.twig" %}

{% block meta_title %}{{ 'Dashboard'|trans }}{% endblock %}
{% block page_title %}{{ 'Dashboard'|trans }}{% endblock %}

{% block content %}
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <!-- Open Invoices -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'Open Invoices'|trans }}</dt>
                            <dd>
                                <div class="text-lg font-medium text-gray-900">{{ client.invoice_get_list({"status": "unpaid"}).total }}</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <div class="text-sm">
                    <a href="{{ '/invoice'|link }}" class="font-medium text-cyan-700 hover:text-cyan-900">{{ 'View all'|trans }}</a>
                </div>
            </div>
        </div>

        <!-- Active Orders -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'Active Orders'|trans }}</dt>
                            <dd>
                                <div class="text-lg font-medium text-gray-900">{{ client.order_get_list({"status": "active"}).total }}</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <div class="text-sm">
                    <a href="{{ '/order'|link }}" class="font-medium text-cyan-700 hover:text-cyan-900">{{ 'View all'|trans }}</a>
                </div>
            </div>
        </div>

        <!-- Open Tickets -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 0a5 5 0 10-7.07 7.07 5 5 0 007.07-7.07zM15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'Open Tickets'|trans }}</dt>
                            <dd>
                                <div class="text-lg font-medium text-gray-900">{{ client.support_ticket_get_list({"status": "open"}).total }}</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <div class="text-sm">
                    <a href="{{ '/support'|link }}" class="font-medium text-cyan-700 hover:text-cyan-900">{{ 'View all'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
